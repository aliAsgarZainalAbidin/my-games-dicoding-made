<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyGames" parent="Theme.Material3.DayNight.NoActionBar.MyGames">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/jet_black</item>
        <item name="colorAccent">@color/electric_blue</item>
        <item name="colorSecondary">@color/silver</item>
    </style>

    <style name="Theme.MyGames" parent="Base.Theme.MyGames" />

    <style name="Theme.Material3.DayNight.NoActionBar.MyGames" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="BaseFont" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/silver</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="BaseFont.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/silver</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="BaseFont.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/silver</item>
