    </style>

    <style name="BaseFont.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/silver</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="BaseFont.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/silver</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="BaseFont.Content" parent="BaseFont">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="CheckButton" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/red</item>
    </style>

